<body>
  <div class="container" id="container">

    {{#unless flag}}
    <br>
    <h1 style = "color:white">{{record.USERNAME}}</h1>
    <br>
    <ul class="list-group">
      <li class="list-group-item"><strong>Username: </strong>{{record.USERNAME}}</li>
      <li class="list-group-item"><strong>Tên: </strong>{{record.TEN}}</li>
      <li class="list-group-item"><strong>Email: </strong>{{record.EMAIL}}</li>
      <li class="list-group-item"><strong>Xếp hạng: </strong>{{record.XEP_HANG}}</li>
      <li class="list-group-item"><strong>Cấp: </strong>{{record.CAP}}</li>
      <li class="list-group-item"><strong>Lượng tiền: </strong>{{record.LUONG_TIEN}}</li>
    </ul>
    <br>
    <form method="POST" class="btn btn-danger pull-left" action="/taikhoan/xoa/{{record.USERNAME}}?_method=DELETE">
      <input type="submit" class="btn btn-danger" value="Xóa">
    </form>
    <form method="POST" class="btn btn-success pull-left" action="/taikhoan/thaydoi/{{record.USERNAME}}">
      <input type="submit" class="btn btn-success" value="Thay đổi thông tin">
    </form>
    <form method="POST" class="btn btn-primary pull-left" action="/taikhoan/bauvat/{{record.USERNAME}}">
      <input type="submit" class="btn btn-primary" value="Báu vật sở hữu">
    </form>
    <br>
    {{/unless}}

    {{#if flag}}
    {{#each record}}
    <br>
    <h1 style = "color:white">{{USERNAME}}</h1>
    <br>
    <ul class="list-group">
      <li class="list-group-item"><strong>Username: </strong>{{USERNAME}}</li>
      <li class="list-group-item"><strong>Tên: </strong>{{TEN}}</li>
      <li class="list-group-item"><strong>Email: </strong>{{EMAIL}}</li>
      <li class="list-group-item"><strong>Xếp hạng: </strong>{{XEP_HANG}}</li>
      <li class="list-group-item"><strong>Cấp: </strong>{{CAP}}</li>
      <li class="list-group-item"><strong>Lượng tiền: </strong>{{LUONG_TIEN}}</li>
    </ul>
    <br>
    <form method="POST" class="btn btn-danger pull-left" action="/taikhoan/xoa/{{USERNAME}}?_method=DELETE">
      <input type="submit" class="btn btn-danger" value="Xóa">
    </form>
    <form method="POST" class="btn btn-success pull-left" action="/taikhoan/thaydoi/{{USERNAME}}">
      <input type="submit" class="btn btn-success" value="Thay đổi thông tin">
    </form>
    <form method="POST" class="btn btn-primary pull-left" action="/taikhoan/bauvat/{{USERNAME}}">
      <input type="submit" class="btn btn-primary" value="Báu vật sở hữu">
    </form>
    <br>
    {{/each}}
    {{/if}}
    <form><br/></form>
    <form>
    <a class="btn btn-primary" href="/taikhoan"><b>Quay lại</b></a>
    </form>
