<style>
    body {
        --color-1: #5F50BF;
        --color-2: #7382D9;
        --color-3: #1C66A6;
        --color-4: #1EB7D9;
        --color-5: #29C7D9;

        height: 100%;
        color: white;

        /*padding: 20px;*/
        background-image: url('https://c4.wallpaperflare.com/wallpaper/37/323/635/league-of-legends-shurima-blurred-video-games-wallpaper-preview.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    #page-header {
        width: 70%;
        margin: 30px auto 30px;
    }

    .body-bg-img {
        filter: blur(8px);
        height: 100%;
        width: 100%;

    }

    .disabled {
        display: none;
    }

    .champion-search > input {
        width: 100%;
    }

    #champion {
        display: flex;
        width: 50%;
        margin: 0 auto;
        padding: 50px 0;
        justify-content: space-between;
        height: 100%;
    }

    #champion-info > a {
        text-decoration: none;
        color: white;
    }

    #champion-info > a > h2 {
        font-size: 50px;
    }

    #champion-image {
        width: 50%;
    }
</style>









<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" class="logo_brand">
                    <h2>THÔNG TIN TƯỚNG</h3>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/">HOME</a>
              </li>
              {{!-- <li class="nav-item">
                <a class="nav-link" href="/user/add">Add User</a>
              </li> --}}
          </div>
            </div>
        </nav>
    </header>

    <!-- Form nhập và chỉnh sửa -->


    <!-- Hiển thị danh sách -->
    {{#if name }}

    <div id="champion">
        <div id="champion-info">

            <a href="/skins/{{name}}">
            <h2>{{name}} </h2>
            </a>

            <h3>{{desc}}</h3>
            <br>
            <h4>Giá: {{price}}</h4>

            <form method="POST" class="btn btn-danger pull-left" action="/champ/xoa/{{id}}?_method=DELETE">
            <input type="submit" class="btn btn-danger pull-left btn1" value="Xóa">

            </form>

            <form method="POST" class="btn btn-success pull-left" action="/champ/chinhsua/{{id}}">
            <input type="submit" class="btn btn-success btn1" value="Chỉnh sửa">
            </form>

            <form method="GET" action="/champions">
            <input type="submit" class="btn btn-primary" value="Quay lại">
            </form>
        </div>

        <img src='' alt="None" id="champion-image">
    </div>
    {{else}}
    <div class="container" id="container">

    <nav class="navbar navbar-default">

      <a class="navbar-brand" href="#"><h2><b>Tướng trong trò chơi</h2></a>
    </nav>
    <a>Tìm kiếm tướng</a>
    <form class="form-inline text-center" method="POST" action="./champions">
      <div class="form-group">
        <input type="text" name="champName" class="form-control" placeholder="Tên tướng">
      </div>
      <br>
      <input class="disabled" type="text" name="clientMethod" value="GET" id="formGet">
      <input type="submit" class="btn btn-primary" value="Tìm kiếm">
    </form>
    <br/>

    <form class="text-center" method="GET" action="/champ/them">
      <input type="submit" class="btn btn-primary" value="Thêm">
    </form>
    </div>
    {{#if deleted}} <p class="error">{{error}}</p>{{/if}}
    {{/if}}

</body>


<script>
    document.getElementById('champion-image').src = `./champ_img/{{{name}}}_0.jpg`
</script>