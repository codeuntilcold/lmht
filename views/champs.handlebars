<style>
    body {
        --color-1: #5F50BF;
        --color-2: #7382D9;
        --color-3: #1C66A6;
        --color-4: #1EB7D9;
        --color-5: #29C7D9;

        height: 100%;
        color: white;

        /*padding: 20px;*/
        background-image: url('https://c4.wallpaperflare.com/wallpaper/37/323/635/league-of-legends-shurima-blurred-video-games-wallpaper-preview.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }

    #page-header {
        width: 70%;
        margin: 30px auto 30px;
    }

    .disabled {
        display: none;
    }

    .champion-search>input {
        width: 100%;
    }

    #champion {
        display: flex;
        width: 50%;
        margin: 0 auto;
        padding: 50px 0;
        justify-content: space-between;
        height: 100%;
        min-width: 425px;
    }

    #champion-info>a {
        text-decoration: none;
        color: white;
    }

    #champion-info>a>h2 {
        font-size: 50px;
    }

    #champion-info>a>h2>span {
        color: transparent;
    }

    #champion-info>a>h2:hover>span {
        color: white;
    }

    #champion-image {
        width: 50%;
    }
</style>









<body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/" class="logo_brand">
                    <h2>THÔNG TIN TƯỚNG</h3>
                </a>

                <form class="champion-search" action="./champions" method="post">
                    <input type="text" name="champName" id="formGet">
                    <input class="disabled" type="text" name="clientMethod" value="GET" id="formGet">
                    <input class="disabled" type="submit">
                </form>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/trangbi">TRANG BỊ</a>
                        </li>

                </div>
            </div>
        </nav>
    </header>

    <!-- Form nhập và chỉnh sửa -->


    <!-- Hiển thị danh sách -->
    {{#if NAME}}

    <div id="champion">
        <div id="champion-info">

            <a href="/skins/{{NAME}}">
                <h2>{{NAME}} <span>></span></h2>
            </a>
            <h3>{{DESC}}</h3>
            <br>
            <br>
            <h4>Giá: {{PRICE}}</h4>
            <br>
            <br>

            <h4>Các kỹ năng:</h4>
            {{#each skills}}

            <p>{{this.ABILITY}} - <i>{{this.EFFECT}}</i></p>

            {{/each}}

        </div>

        <img src='' alt="None" id="champion-image">
    </div>

    {{else}}

    <p id='champion'>Không tồn tại tướng trong dữ liệu!</p>

    {{/if}}

</body>


<script>
    document.getElementById('champion-image').src = `./champ_img/{{{NAME}}}_0.jpg`
</script>