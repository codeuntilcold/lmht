<style>

    body {
        --color-1: #5F50BF;
        --color-2: #7382D9;
        --color-3: #1C66A6;
        --color-4: #1EB7D9;
        --color-5: #29C7D9;

    }

    .body-bg-img {
        background-image: url('https://wallpaperaccess.com/full/217097.jpg');
        filter: blur(8px);
        height: 100%;
        width: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;

    }

    .disabled {
        display: none;
    }

    .champion-search {
        position: sticky;
        margin: 10px auto;
        width: 70%;
        display: flex;
        justify-content: space-between;
    }

    .champion-search > input {
        width: 70%;
        margin-left: 20px;
    }

    .body-data {
        margin: 25px auto;
        width: 70%;
        font-size: 14px;
    }

    table {
        margin: 25px auto;
        width: 70%;
        font-size: 14px;

    }

    td, th {
        border: 1px solid #ddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: var(--color-1);
        color: white;
        text-align: center;
    }


    tr:nth-child(even) {
        background-color: #ddd;
    }

    tr:nth-child(odd) {
        background-color: white;
    }

</style>









<body>

    <div class="body-bg-img"></div>
    
    <!-- Form nhập và chỉnh sửa -->
    <form class="champion-search" action="./skins" method="post">
        <h3>Tìm tướng</h3>
        <input type="text" name="champName" id="formGet">
        <input class="disabled" type="text" name="clientMethod" value="GET" id="formGet">
        <input class="disabled" type="submit">
    </form>

    <!-- Hiển thị danh sách -->
    {{#if rows}}
        <table class="body-data">
            <tr>
                {{#each metaData}}
                <th>{{ this.name }}</th>
                {{/each}}
                <!-- <th>Tên trang phục</th>
                <th>Bậc</th>
                <th>Ngày ra mắt</th> -->
            </tr>

            
            {{#each rows}}
            <tr>

                <td> {{this.TEN_TUONG}} </td>
                <td> {{this.CHU_DE}} </td>
                <td> {{this.BAC}} </td>
                <td> {{this.NGAY_RA_MAT}} </td>
            </tr>
            {{/each}}

        </table>
    {{else}}
        <p class='body-data'>Không tồn tại tướng trong dữ liệu!</p>
    {{/if}}

</body>




