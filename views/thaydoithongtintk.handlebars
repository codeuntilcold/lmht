<body>
  <div class="container" id="container">
    <br>
    <h1 style = "color:white">{{username}}</h1>
    <br>
    <form method="POST" action="/taikhoan/thaydoi/{{username}}">
    <ul class="list-group">
      <li class="list-group-item"><strong>Username: </strong>{{username}}</li>
      <li class="list-group-item"><strong>Tên: </strong>{{ten}}
      <br>
      <input type="text" name="ten" class="form-control" placeholder="Thay đổi tên người dùng"></li>
      <li class="list-group-item"><strong>Email: </strong>{{email}}
      <br>
      <input type="text" name="email" class="form-control" placeholder="Thay đổi email người dùng">
      </li>
      <li class="list-group-item"><strong>Xếp hạng: </strong>{{xephang}}
      <br>
      <input type="text" name="xephang" class="form-control" placeholder="Thay đổi xếp hạng tài khoản"></li>
      <li class="list-group-item"><strong>Cấp: </strong>{{cap}}
      <br>
      <input type="text" name="cap" class="form-control" placeholder="Thay đổi cấp của tài khoản"></li>
      <li class="list-group-item"><strong>Lượng tiền: </strong>{{luongtien}}
      <br>
      <input type="text" name="luongtien" class="form-control" placeholder="Thay đổi lượng tiền của tài khoản"></li>
    </ul>
    <br>
     <input type="submit" class="btn btn-primary" value="Xác nhận thay đổi">
    </form>
    <br/>
    <form method="GET" action="/taikhoan">
      <input type="submit" class="btn btn-primary" value="Quay lại">
    </form>
  </div>
</body>